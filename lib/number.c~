#include "my.h"

int 	power(int nb)
{
	int i = nb;
	int j = 1;

	while (i > 1) {
		j = j * 10;
		i--;
	}
	return (j);
}

int	my_isnbr(char const *str)
{
	int i = 0;

	while (str[i] != '\0') {
		if (str[0] == '-') {
			;
		}
		if (48 <= str[i] && str[i] <= 57) {
			;
		} else {
			return (0);
		}
		i++;
	}
	return (1);
}

int	my_converse(char const *str)
{
	int i = my_strlen(str);
	int j = 0;
	int k = 1;
	int l = 0;

	if (str[0] == '-') {
		l = 1;
	}
	while (i > l) {
		j = (str[i - 1] - 48) * power(k) + j;
		i--;
		k++;
	}
	if (l == 1) {
		j = j * (-1);
	}
	return (j);
}

int	number(char *str)
{
	int a = 0;
	int b = 0;

	a = my_isnbr(str);
	if (a == 0) {
		return (0);
	} else {
		b = my_converse(str);
		return (b);
	}
}
